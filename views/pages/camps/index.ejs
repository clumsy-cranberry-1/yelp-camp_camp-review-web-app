<% layout("/layouts/boilerplate.ejs") %>

	<div class="row m-0">
		<div class="custom-map1" id="map"></div>
	</div>

	<p class="display-5 my-5 text-center">Campgrounds</p>
	<div class="container col-lg-8">

		<% for (var camp of allCampgrounds) { %>
			<div class="card border-0">
				<div class="row m-0">
					<div class="col-md-5">
						<img src="<%= camp.images[0] %>" class="rounded img-fluid h-100" alt="...">
					</div>
					<div class="col-md-7">
						<div class="h-100 d-flex flex-column justify-content-between">
							<div class=" mt-3">
								<h5 class="card-title">
									<%= camp.title %>
								</h5>
								<h6 class="card-subtitle text-muted">
									<%= camp.location %>
								</h6>
								<p class="card-text my-4 custom-text-overflow-clamp">
									<%= camp.description %>
								</p>
							</div>
							<div class="align-self-end">
								<a href="/campgrounds/<%= camp._id %>"
									class="card-link text-decoration-none px-3 py-2 fs-4 stretched-link custom-link"><i
										class="fa-solid fa-circle-right"></i></a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<hr>
			<% } %>
	</div>

	<script>
		const allCampgrounds = {
			features: <%- JSON.stringify(allCampgrounds) %>
	};
	</script>
	<script src="/js/mapbox-cluster-map.js"></script>